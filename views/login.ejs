<div class="row-mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Log In</h1>
                <%- include("./partials/messages") %>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Enter Your Email" value="<%= typeof email != 'undefined' ? email: '' %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password" value="<%= typeof email != 'undefined' ? password: '' %>">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </form>
                <p class="lead mt-4">No Account? <a href="/users/register">Register</a></p>
            </div>
        </div>
    </div>